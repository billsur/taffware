.mi
	font-family 'material'
	font-weight normal
	font-style normal
	font-size 24px
	font-display block
	line-height 1
	letter-spacing normal
	text-transform none
	display inline-block
	white-space nowrap
	word-wrap normal
	direction ltr
	-webkit-font-feature-settings 'liga'
	-webkit-font-smoothing antialiased
	for $mi in 12 14 16 18 24 30 36 42 48
		&-{$mi}
			font-size $mi px
			width $mi px
			height $mi px

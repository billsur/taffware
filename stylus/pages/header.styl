header
  position fixed
  top 0
  left 0
  width 100%
  background white
  z-index 10
  .container
    display flex
    flex-direction column
    a
      color black
    .header
      &__list,
      &__sub__brand
        display flex
      &__list
        padding 30px 40px
        background white
        z-index 10
      &__logo
        margin-right 20px
      &__menu
        display flex
        align-items center
        padding 0 15px
      &__sub__brand
        justify-content space-between
        position absolute
        z-index 1
        width 100%
        top 0
        padding 20px
        border-bottom-left-radius 15px
        border-bottom-right-radius 15px
        background white
        box-shadow 0 4px 2px -3px #CCCC
        transition all .5s ease-in-out
        a
          background #F5F5F5
          border-radius 5px
          padding 5px 10px
          height 40px
          width 10%
          text-align center
          &.disabled
            background #AAAA
            filter grayscale(100%)
            cursor auto
          &:not(.disabled)
            &:hover
              filter brightness(80%)
        &--show
          top 65px
arrow()
  position absolute
  cursor pointer
  top 40%
  transition 0.3s
  width 40px
  height 40px

arrowLeft()
  arrow()
  background url('/img/svg/arrow-left-black.svg') center top / cover no-repeat
  left 15px
  &:hover
    background url('/img/svg/arrow-left-active.svg') center top / cover no-repeat

arrowRight()
  arrow()
  background url('/img/svg/arrow-right-black.svg') center top / cover no-repeat
  right 15px
  &:hover
    background url('/img/svg/arrow-right-active.svg') center top / cover no-repeat

button($bgColor = 'white', $textColor = 'black')
  box-shadow 0px 4px 4px rgba(0, 0, 0, 0.1)
  border-radius 30px
  background $bgColor
  color $textColor
  font-weight bold
  padding 10px 20px

.hb
  margin-top 65px
  &__slides
    &:focus
      outline none
  &__img
    height 400px
  &__detail
    position absolute
    top 0
    width 390px
    margin 60px 0 0 80px
    &__title
      font 32px/40px $font
      margin-bottom 10px
    &__desc
      font 16px/24px $font
    &__link
      margin-top 15px
      &__button
        margin-top 5px
        a
          img
            height 35px
            width auto
          &:nth-child(2)
            margin 0 10px
          &:focus
            outline none
  &__arrow
    &--prev
      arrowLeft()
    &--next
      arrowRight()
  .slick-dots
    right 38.666%
    bottom 40px
.ab
  margin-bottom 60px
  &__content
    margin-top 80px
  &__top
    display flex
    justify-content space-between
  &__left
    width 50%
  &__right
    width 40%
    padding-left 0px
    h3
      font bold 24px/30px $font
    &__button
      margin-top 30px
  &__bottom
    margin-top 40px
    background $red
    border-radius 15px
    width auto
    transition all .8s ease-in-out
    &:hover
      transform scale(1.05)
    &__content
      display flex
      justify-content center
      align-items center
      height inherit
      padding 35px 60px
    &__bpri,
    &__bpro,
    &__bser
      text-align center
      padding 15px
    &__title
      font-size 20px
      font-weight bold
      color white
    &__desc
      color white
.dl
  background-color $light-grey
  padding 10px 0 80px 0
  &__banner
    margin-bottom 20px
  &__tabs
    display flex
    justify-content space-around
    cursor pointer
  &__tab
    padding 5px 15px
    border-radius 20px
    transition all .2s ease-in
    &:hover
      background $gray
      color white
    &.active
      background black
      color white
  &__loading
    text-align center
    color $red
    &__img
      width 60px
  &__list
    min-height 800px
    padding-top 20px
    display grid
    grid-template-columns auto auto auto auto
    grid-gap 20px
    &__item
      background white
      border .5px solid #CCCCCC
      border-radius 15px
      padding 20px
      &__img
        width 200px
        margin 0 auto 15px
      &__title
        min-height 70px
        font-weight bold
        margin-bottom 10px
        display -webkit-box
        -webkit-line-clamp 3
        -webkit-box-orient vertical
        overflow hidden
      &__price
        text-decoration line-through
        margin 0
      &__discount
        &__price
          display flex
          align-items center
          p
            color red
            font-weight bold
        &__percentage
          margin-left 5px
          color white
          font-weight bold
          padding 7px 5px 5px 10px
          background url('/img/svg/price-bubble.svg') center / 100% 100% no-repeat
      &__button
        margin-top 15px
        button
          width 100%
      p
        margin 0
  &__more
    margin-top 40px
    text-align center
    button
      padding 15px 30px
.sc
  margin 60px 0
  &__banner__slides
    margin-bottom 20px
  &__banner__arrow
    &--prev
      arrowRight()
    &--next
      arrowLeft()
  &__img
    img
      transition all .2s linear
      transition-delay 0.5s
    &.slick-current
      img
        opacity 1
        padding 0
        transition-delay 0.5s
    &:not(.slick-current)
      img
        opacity 0.5
        padding 15px
        transition-delay 0s
    &:focus
      outline none
  &__detail__slides
    width 60%
    padding 0
    margin auto
    text-align center
    &:focus
      outline none
  &__detail__desc
    blockquote
      font 800 26px/34px $font
.hl
  background-color $light-grey
  padding 40px 0 80px
  .accordions
    overflow hidden
    input
      position absolute
      opacity 0
      z-index -1
      &:checked
        +.accordion-label
          &:before
            transform rotate(90deg) scale(0.6)
        &~.accordion-content
          max-height 100vh
          padding 0 20px 25px 110px
    .accordion
      width 100%
      color black
      overflow hidden
      border-bottom 1px solid $gray
      &-label
        display flex
        justify-content flex-start
        padding 20px 15px
        font 800 22px/30px $font
        cursor pointer
        align-items center
        &::before
          content url('/img/svg/arrow-icon.svg');
          transform scale(0.6)
          margin-right 15px
          transition all .4s
      &-content
        max-height 0
        padding 0 20px 0 110px
        color $gray
        font 500 18px/28px $font
        transition all .35s
.tseo
  background $red
  padding 100px 0 60px 0
  h1
    font bold 38px $font-h
  h2
    font bold 26px $font-h
  h1,
  h2,
  p
    color white
.tcopy
  background $red
  color white
  .container
    border-top 1px solid white
    padding 40px 0 60px
  span
    display flex
    justify-content center
    align-items center
button
  border none
  cursor pointer
.button--red
  button($red, white)
  &:hover
    opacity 0.7
  &:focus
    outline none
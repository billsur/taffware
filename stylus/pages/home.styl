arrow()
  position absolute
  cursor pointer
  top 40%
  transition 0.3s
  width 40px
  height 40px

arrowLeft()
  arrow()
  background url('/img/svg/arrow-left-black.svg') center top / cover no-repeat
  left 15px
  &:hover
    background url('/img/svg/arrow-left-active.svg') center top / cover no-repeat

arrowRight()
  arrow()
  background url('/img/svg/arrow-right-black.svg') center top / cover no-repeat
  right 15px
  &:hover
    background url('/img/svg/arrow-right-active.svg') center top / cover no-repeat

button($bgColor = 'white', $textColor = 'black')
  box-shadow 0px 4px 4px rgba(0, 0, 0, 0.1)
  border-radius 30px
  background $bgColor
  color $textColor
  font-weight bold
  padding 10px 20px

.hb
  margin-top 65px
  &__slides
    &:focus
      outline none
  &__img
    height 400px
  &__detail
    position absolute
    top 0
    width 390px
    margin 60px 0 0 80px
    &__title
      font 32px/40px $font
      margin-bottom 10px
    &__desc
      font 16px/24px $font
    &__link
      margin-top 15px
      &__button
        margin-top 5px
        a
          img
            height 35px
            width auto
          &:nth-child(2)
            margin 0 10px
          &:focus
            outline none
  &__arrow
    &--prev
      arrowLeft()
    &--next
      arrowRight()
  .slick-dots
    right 38.666%
    bottom 40px
.ab
  margin-bottom 60px
  &__content
    margin-top 80px
  &__top
    display flex
    justify-content space-between
  &__left
    width 50%
  &__right
    width 40%
    padding-left 0px
    h3
      font bold 24px/30px $font
    &__button
      margin-top 30px
  &__bottom
    margin-top 40px
    background $red
    border-radius 15px
    width auto
    transition all .8s ease-in-out
    &:hover
      transform scale(1.05)
    &__content
      display flex
      justify-content center
      align-items center
      height inherit
      padding 35px 60px
    &__bpri,
    &__bpro,
    &__bser
      text-align center
      padding 15px
    &__title
      font-size 20px
      font-weight bold
      color white
    &__desc
      color white
.button--red
  button($red, white)
